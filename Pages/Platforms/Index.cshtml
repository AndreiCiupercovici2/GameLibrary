@page
@model GameLibrary.Pages.Platforms.IndexModel

@{
    ViewData["Title"] = SharedLocalizer["Platforms"];
}

<h1>@SharedLocalizer["Platforms"]</h1>

<p>
    <a asp-page="Create">@SharedLocalizer["PlatformCreatePageTitle"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Platform[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform[0].GamePlatforms)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Platform) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @foreach (var gamePlatform in item.GamePlatforms)
                {
                        @gamePlatform.Game.Title <br />
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">@SharedLocalizer["Edit"]</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">@SharedLocalizer["Details"]</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">@SharedLocalizer["DeleteButton"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
