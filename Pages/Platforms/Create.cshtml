@page
@model GameLibrary.Pages.Platforms.CreateModel

@{
    ViewData["Title"] = SharedLocalizer["PlatformCreatePageTitle"];
}

<h1>@SharedLocalizer["PlatformCreatePageTitle"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Platform.Name" class="control-label"></label>
                <input asp-for="Platform.Name" class="form-control" aria-required="true"/>
                <span asp-validation-for="Platform.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Platform.Manufacturer" class="control-label"></label>
                <input asp-for="Platform.Manufacturer" class="form-control" />
                <span asp-validation-for="Platform.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["CreateButton"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@SharedLocalizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
