@page
@model GameLibrary.Pages.Studios.DeleteModel

@{
    ViewData["Title"] = SharedLocalizer["DeleteStudioPageTitle"];
}

<h1>@SharedLocalizer["DeleteStudioPageTitle"]</h1>

<h3>@SharedLocalizer["DeleteStudioPageSubtitle"]</h3>
<div>
    <h4>@SharedLocalizer["Studio"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio.Country)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Studio.ID" />
        <input type="submit" value=@SharedLocalizer["DeleteButton"] class="btn btn-danger" /> |
        <a asp-page="./Index">@SharedLocalizer["BackToList"]</a>
    </form>
</div>
