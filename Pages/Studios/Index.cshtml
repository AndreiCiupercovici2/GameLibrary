@page
@model GameLibrary.Pages.Studios.IndexModel

@{
    ViewData["Title"] = @SharedLocalizer["Studios"];
}

<h1>@SharedLocalizer["Studios"]</h1>

<p>
    <a asp-page="Create">@SharedLocalizer["CreateStudioPageTitle"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Studio[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studio[0].Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Studio) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">@SharedLocalizer["Edit"]</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">@SharedLocalizer["Details"]</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">@SharedLocalizer["DeleteButton"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
