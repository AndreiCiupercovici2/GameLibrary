@page
@model GameLibrary.Pages.Games.DeleteModel

@{
    ViewData["Title"] = SharedLocalizer["DeleteGamePageTitle"];
}

<h1>@SharedLocalizer["DeleteGamePageTitle"]</h1>

<h3>@SharedLocalizer["DeleteGamePageSubtitle"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Game.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Game.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Game.Price.ToCurrency()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Game.Studio.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Studio.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Game.ID" />
        <input type="submit" value=@SharedLocalizer["DeleteButton"] class="btn btn-danger" /> |
        <a asp-page="./Index">@SharedLocalizer["BackToList"]</a>
    </form>
</div>
