@page
@model GameLibrary.Pages.Games.EditModel

@{
    ViewData["Title"] = SharedLocalizer["EditGamePageTitle"];
}

<h1 data-testid="edit-game-title">@SharedLocalizer["EditGamePageTitle"]</h1>

<hr />
<div class="row" data-testid="game-edit-container">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.ID" />
            <div class="form-group">
                <label asp-for="Game.Title" class="control-label"></label>
                <input asp-for="Game.Title" class="form-control" readonly data-testid="game-title-input"/>
                <span asp-validation-for="Game.Title" class="text-danger" data-testid="error-title"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Game.Price" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Game.Price" class="form-control" readonly type="number" step="0.01" data-testid="game-price-input"/>
                    <span class="input-group-text bg-info text-white">
                         @SharedLocalizer["ApproxValue"] @Model.Game.Price.ToCurrency()
                    </span>
                </div>
                <span asp-validation-for="Game.Price" class="text-danger" data-testid="error-price"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.StudioID" class="control-label"></label>
                <select asp-for="Game.StudioID" class="form-control" asp-items="ViewBag.StudioID" data-testid="game-studio-select"></select>
                <span asp-validation-for="Game.StudioID" class="text-danger" data-testid="error-studio"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["SaveButton"] class="btn btn-primary" data-testid="submit-btn"/>
            </div>
            <div class="form-group">
                <label></label>
                <div class="table">
                    @foreach (var item in Model.GenreOptions)
                    {
                        <div class="form-check">
                            <input type="checkbox"
                                   name="SelectedGenreIDs"
                                   value="@item.Value"
                                   class="form-check-input"
                                   data-testid="genre-checkbox-@item.Text"
                                   @(Model.SelectedGenreIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                            <label class="form-check-label">@item.Text</label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <label></label>
                <div class="table">
                    @foreach (var item in Model.PlatformOptions)
                    {
                        <div class="form-check">
                            <input type="checkbox"
                                   name="SelectedPlatformIds"
                                   value="@item.Value"
                                   class="form-check-input"
                                   data-testid="platform-checkbox-@item.Text"
                                   @(Model.SelectedPlatformIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                            <label class="form-check-label">@item.Text</label>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" data-testid="back-to-list-link">@SharedLocalizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
