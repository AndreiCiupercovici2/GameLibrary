@page
@model GameLibrary.Pages.Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.ID" />
            <div class="form-group">
                <label asp-for="Game.Title" class="control-label"></label>
                <input asp-for="Game.Title" class="form-control" readonly />
                <span asp-validation-for="Game.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Price" class="control-label"></label>
                <input asp-for="Game.Price" class="form-control" readonly />
                <span asp-validation-for="Game.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.StudioID" class="control-label"></label>
                <select asp-for="Game.StudioID" class="form-control" asp-items="ViewBag.StudioID" ></select>
                <span asp-validation-for="Game.StudioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label>Genres</label>
                <div class="table">
                    @foreach (var item in Model.GenreOptions)
                    {
                        <div class="form-check">
                            <input type="checkbox"
                                   name="SelectedGenreIDs"
                                   value="@item.Value"
                                   class="form-check-input"
                                   @(Model.SelectedGenreIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                            <label class="form-check-label">@item.Text</label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <label>Platforms</label>
                <div class="table">
                    @foreach (var item in Model.PlatformOptions)
                    {
                        <div class="form-check">
                            <input type="checkbox"
                                   name="SelectedPlatformIds"
                                   value="@item.Value"
                                   class="form-check-input"
                                   @(Model.SelectedPlatformIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                            <label class="form-check-label">@item.Text</label>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
