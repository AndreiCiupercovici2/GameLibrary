@page
@model GameLibrary.Pages.Games.CreateModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = SharedLocalizer["GameCreatePageTitle"];
}

<h1>@SharedLocalizer["GameCreatePageTitle"]</h1>

<h4>@SharedLocalizer["GameCreatePageSubtitle"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Game.Title" class="control-label"></label>
                <input asp-for="Game.Title" class="form-control" aria-required="true"/>
                <span asp-validation-for="Game.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Game.Price" class="control-label"></label>
                <input asp-for="Game.Price" class="form-control" />
                <span asp-validation-for="Game.Price" class="text-danger"></span>
            </div>
            <small class="form-text text-muted">
                @SharedLocalizer["Price_Hint"]
            </small>
            <div class="form-group">
                <label asp-for="Game.StudioID" class="control-label"></label>
                <select asp-for="Game.StudioID" class ="form-control" asp-items="ViewBag.StudioID" ></select>
                <span asp-validation-for="Game.StudioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                @foreach (var item in Model.GenreOptions)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedGenreIds" value="@item.Value" class="form-check-input" />
                        <label class="form-check-label">@item.Text</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                @foreach (var item in Model.PlatformOptions)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedPlatformIDs" value="@item.Value" class="form-check-input" />
                        <label class="form-check-label">@item.Text</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["CreateButton"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@SharedLocalizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
