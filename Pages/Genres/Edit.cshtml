@page
@model GameLibrary.Pages.Genres.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Genre.ID" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Genre.Name" class="control-label"></label>
                <input asp-for="Genre.Name" class="form-control" aria-required="true"/>
                <span asp-validation-for="Genre.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Games</label>
                <div class="form-grup">
                    <label class="control-label">Select Games (Hold CTRL to select multiple)</label>
                    <select asp-for="SelectedGameIds"
                            asp-items="Model.AllGames"
                            class="form-control"
                            multiple="multiple">
                            style="height: 150px;">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
