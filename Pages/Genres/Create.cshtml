@page
@model GameLibrary.Pages.Genres.CreateModel

@{
    ViewData["Title"] = SharedLocalizer["GenreCreatePageTitle"];
}

<h1>@SharedLocalizer["GenreCreatePageTitle"]</h1>

<h4>@SharedLocalizer["GenreCreatePageSubtitle"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Genre.Name" class="control-label"></label>
                <input asp-for="Genre.Name" class="form-control" aria-required="true"/>
                <span asp-validation-for="Genre.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@SharedLocalizer["CreateButton"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">@SharedLocalizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
