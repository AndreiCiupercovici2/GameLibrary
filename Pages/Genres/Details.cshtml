@page
@model GameLibrary.Pages.Genres.DetailsModel

@{
    ViewData["Title"] = SharedLocalizer["DetailsGenrePageTitle"];
}

<h1>@SharedLocalizer["DetailsGenrePageTitle"]</h1>

<div>
    <h4>@SharedLocalizer["Genre"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            Games
        </dt>
        <dd class="col-sm-10">
            @foreach (var genreLink in Model.Genre.GameGenres)
            {
                <span>@genreLink.Game.Title</span> <br />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Genre.ID">@SharedLocalizer["Edit"]</a> |
    <a asp-page="./Index">@SharedLocalizer["BackToList"]</a>
</div>
